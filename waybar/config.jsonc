    "modules-left": [ "clock", "custom/pacman", "idle_inhibitor", "custom/weather", "custom/notifications"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [ "cpu", "memory", "temperature", "custom/gpu", "pulseaudio", "network", "custom/vpn", "tray"],
    // Modules configuration
    "hyprland/workspaces": {
        //"disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "Ôâ®",
            "2": "ÔÑ†",
            "3": "ÔÜº",
            "4": "ÔÜ∂",
            "urgent": "ÔÅ™",
            "focused": ""
            //"default": "{name}"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "tooltip": "true",
        "min-length": 3
    },
    "tray": {
        //"icon-size": 11,
        "spacing": 5
    },
    "clock": {
        "format": "ÔÄó  {:%H:%M  ÔÅ≥ %e %b}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>",
        //"on-click": "gnome-calendar"
    },
    "cpu": {
        "interval": "1",      
        "format": "<big>Û∞çõ</big>  {}% ",
        "on-click": "kitty -e top -o '%CPU'",
        "tooltip": true
    },
    "memory": {
        "interval": "1",
        "format": "<big>ÓúÜ</big>  {}% ",
        "on-click": "kitty -e top -o '%MEM'",
    },
    "temperature": {
        //"thermal-zone": 1,
        "interval": "4",
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 74,
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "{icon}  {temperatureC}¬∞C",
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"],
        "max-length": 7,
        "min-length": 7
    },
    "network": {
        // "interface": "wlan0", // (Optional) To force the use of this interface,
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} Û∞àÅ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Û∞ñ™",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}",
        "tooltip-format-ethernet": " Û∞àÅ {ifname}\nIP: {ipaddr}\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}"
    },
    "custom/vpn": {
        "interval": 1,
        "format": "<big>{icon}</big>",
        "exec": "jq --unbuffered --compact-output -n '$ARGS.named' --arg alt \"`~/.config/scripts/check_vpn.sh`\"",
        "return-type": "json",
        "format-icons": {
            "true": "Û∞íç",
            "false": "Û∞íé",
        },
    },
    "pulseaudio": {
        "scroll-step": 3, // %, can be a float
        "format": "{icon}   {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ó¨§ {icon}Ôäî {format_source}",
        "format-muted": " Ó¨§ {format_source}",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Û∞è≥",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },
    "custom/pacman": {
        "format": "<big>ÔåÉ</big>  {}",
        "interval": 3600,                     // every hour
        "exec": "checkupdates | wc -l",       // # of updates
        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        "on-click": "kitty sh -c 'yay -Syu --noconfirm; pkill -SIGRTMIN+8 waybar'", // update system
        "signal": 8,
        "max-length": 15,
        "min-length": 5
    },
    "custom/weather": {
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600
    },
    "custom/notifications": {
        "format": "<big>{icon}</big>",
        "exec": "jq --unbuffered --compact-output -n '$ARGS.named' --arg alt \"`dunstctl is-paused`\"",
        "on-click": "dunstctl set-paused toggle; pkill -SIGRTMIN+9 waybar",
        //"exec-on-event": true,
        //"exec": "dunstctl is-paused",
        "return-type": "json",
        "format-icons": {
            "false": "Ô°†",
            "true": "Û±ôç",
        },
        "interval": 1,
        "signal": 9,
        "max-length": 15,
        "min-length": 5,
        "tooltip-format": "notifications paused: {alt}"
    },
